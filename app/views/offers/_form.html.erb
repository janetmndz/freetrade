<%=form_for @offer do |f|%>

<%= f.hidden_field :wanted_item_id, :value => @item.id %>
<%= f.hidden_field :status, :value => false%>
<%= f.hidden_field :date, :value => Time.now.strftime("%d/%m/%Y") %>
<%= f.collection_select :offered_item_id, @current_user.items, :id, :name %>
<%= f.submit %>
<% end %>