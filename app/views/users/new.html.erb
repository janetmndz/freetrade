<% if flash[:errors] %>
    <div class="error__box">
        <% flash[:errors].each do |error| %>
        <p><%= error %></p>
        <% end %>
    </div>
<% end %>
<div class="form__container">
    <div class= "form__header">
        <h3>Sign Up</h3>
        <p>Please fillout all the required information.</p>
    </div>
    <%= form_tag '/users' %>
    <%= label_tag 'user[email]', 'Email:' %>
    <%= text_field_tag 'user[email]' %>
    <%= label_tag 'user[password]', 'Password:' %>
    <%= password_field_tag 'user[password]' %>
    <%= label_tag 'user[name]', 'Name:' %>
    <%= text_field_tag 'user[name]' %>
    <%= label_tag 'user[age]', 'Age:' %>
    <%= number_field_tag 'user[age]' %>
    <%= label_tag 'user[location]', 'Location:' %>
    <%= text_field_tag 'user[location]' %>
    <%= label_tag 'user[bio]', 'Bio:' %>
    <%= text_area_tag 'user[bio]' %>
    <%= submit_tag "Sign Up" %>

    <%= link_to "Login to an account", '/welcome', class: "bottom_link" %>
</div>
