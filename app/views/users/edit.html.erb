<div class="form__container">
    <div class= "form__header">
        <h3>Editing Profile</h3>
        <p>Please edit your desired information.</p>
    </div>
    <%= form_for @current_user do |f| %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :age %>
        <%= f.number_field :age %>
        <%= f.label :location %>
        <%= f.text_field :location %>
        <%= f.label :bio %>
        <%= f.text_area :bio %>
        <%= f.submit %>
        <% end %>
</div>
