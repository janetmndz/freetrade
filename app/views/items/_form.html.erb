<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <p><%= error %></p>
    <% end %>
<% end %>
<%=form_for @item do |f|%>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :description %>
    <%= f.text_field :description %>

    <%= f.label :condition %>
    <%= f.text_field :condition %>

    <%= f.label :category %>
    <%= f.text_field :category %>

    <%= f.label :trade %>
    <%= f.text_field :trade %>
    <%= f.label :image_url %>
    <%= f.text_field :image_url %>
    <%= f.hidden_field :user_id, :value => @current_user.id %>
    <%= f.submit %>
    <% end %>
