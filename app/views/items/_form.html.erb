<%=form_for @item do |f|%>
    <%= f.label :name %>
     <%= f.text_field :name %>

      <%= f.label :description %>
     <%= f.text_field :description %>

      <%= f.label :condition %>
     <%= f.text_field :condition %>

     <%= f.label :category %>
     <%= f.text_field :category %>

     <%= f.label :trade %>
     <%= f.text_field :trade %>

     <%= f.hidden :session["user_id"] %>
     <%= f.submit %>
     <% end %>
     